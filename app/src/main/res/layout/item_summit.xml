<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_marginTop="16dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView android:layout_width="100dp" android:layout_height="100dp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="8dp"
               android:id="@+id/summitImage"
               tools:src="@drawable/mountain_default"
               app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              tools:text="North South Everest"
              android:id="@+id/summitName"
              android:layout_marginTop="4dp"
              android:textSize="18sp"
              app:layout_constraintStart_toEndOf="@id/summitImage"
              app:layout_constraintTop_toTopOf="parent"
              android:fontFamily="sans-serif-light"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="2845 m"
              android:id="@+id/summitHeight"
              android:textSize="18sp"
              app:layout_constraintStart_toEndOf="@id/summitImage"
              android:layout_marginTop="4dp"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@id/summitName"
              android:fontFamily="sans-serif-light"/>

    <RatingBar android:layout_width="wrap_content"
               android:id="@+id/summitRating" android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/summitHeight"
               android:layout_marginTop="4dp"
               android:scaleX="0.7"
               android:scaleY="0.7"
               android:layout_marginStart="8dp"
               tools:rating="3.7"
               app:layout_constraintStart_toEndOf="@id/summitImage"/>


</android.support.constraint.ConstraintLayout>