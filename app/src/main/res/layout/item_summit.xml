<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/summitImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/mountain_default" />

    <TextView
        android:id="@+id/summitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/summitImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="North South Everest" />

    <TextView
        android:id="@+id/summitHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/summitImage"
        app:layout_constraintTop_toBottomOf="@id/summitName"
        tools:text="2845 m" />

    <RatingBar
        android:id="@+id/summitRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintStart_toEndOf="@id/summitImage"
        app:layout_constraintTop_toBottomOf="@id/summitHeight"
        tools:rating="3.7" />


</android.support.constraint.ConstraintLayout>